{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "functions": {
    "api/analyze-resume/**/*.ts": { "maxDuration": 60 },
    "api/generate-roadmap/**/*.ts": { "maxDuration": 60 },
    "api/roadmaps/**/*.ts": { "maxDuration": 60 }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_URL": "${VERCEL_URL}"
  },
  "public": true
} 